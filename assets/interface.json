{
    "name": "MNA",
    "url": "https://github.com/MAA-Nikke/MNA",
    "controller": [
        {
            "name": "ADB 默认方式",
            "type": "Adb"
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "python",
        "child_args": [
            "{PROJECT_DIR}/../agent/main.py",
            "-u"
        ]
    },
    "task": [
        {
            "name": "启动游戏",
            "entry": "StartGame"
        },
        {
            "name": "领取挂机奖励",
            "entry": "IdleReward",
            "option": [
                "每日免费2H奖励"
            ]
        },
        {
            "name": "派遣",
            "entry": "Dispatch"
        },
        {
            "name": "新人竞技场",
            "entry": "Arknights",
            "option": [
                "新人竞技场"
            ]
        },
        {
            "name": "特殊竞技场（仅领取奖励）",
            "entry": "Arknights",
            "option": [
                "特殊竞技场"
            ]
        },
        {
            "name": "邮件",
            "entry": "Mail"
        },
        {
            "name": "无限塔",
            "entry": "Arknights",
            "option": [
                "无限塔",
                "企业塔"
            ]
        },
        {
            "name": "咨询",
            "entry": "Consult"
        },
        {
            "name": "互赠好友点数",
            "entry": "Friends"
        },
        {
            "name": "商店免费道具",
            "entry": "Store_Paid"
        },
        {
            "name": "任务和通证证奖励",
            "entry": "Awards"
        }
    ],
    "option": {
        "每日免费2H奖励": {
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "IdleReward_2h": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "IdleReward_2h": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "新人竞技场": {
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "TargetStageName": {
                            "expected": [
                                "竞技场"
                            ],
                            "next": [
                                "EnterRookie",
                                "TargetStageName"
                            ]
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "EnterRookie": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "特殊竞技场": {
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "TargetStageName": {
                            "expected": [
                                "竞技场"
                            ],
                            "next": [
                                "EnterSpecial",
                                "TargetStageName"
                            ]
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "EnterSpecial": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "无限塔": {
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "TargetStageName": {
                            "expected": [
                                "无限之塔"
                            ],
                            "next": [
                                "EnterTribeTower",
                                "TargetStageName"
                            ]
                        }
                    }
                }
            ]
        },
        "企业塔": {
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "TargetStageName": {
                            "expected": [
                                "无限之塔"
                            ],
                            "next": [
                                "EnterConpanyTower",
                                "TargetStageName"
                            ]
                        }
                    }
                }
            ]
        }
    }
}
